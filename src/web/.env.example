NODE_ENV=development

# API configuration: Backend API endpoints
NEXT_PUBLIC_API_BASE_URL=http://localhost:8000/api
NEXT_PUBLIC_SITE_URL=http://localhost:3000

# Contentful CMS configuration: Credentials for the headless CMS
NEXT_PUBLIC_CONTENTFUL_SPACE_ID=your_contentful_space_id
NEXT_PUBLIC_CONTENTFUL_ACCESS_TOKEN=your_contentful_access_token
NEXT_PUBLIC_CONTENTFUL_ENVIRONMENT=master
CONTENTFUL_PREVIEW_ACCESS_TOKEN=your_contentful_preview_token
CONTENTFUL_PREVIEW_MODE=false

# Google reCAPTCHA configuration: Keys for form security
NEXT_PUBLIC_RECAPTCHA_SITE_KEY=your_recaptcha_v2_site_key
NEXT_PUBLIC_RECAPTCHA_V3_SITE_KEY=your_recaptcha_v3_site_key

# Analytics configuration: Google Analytics tracking
NEXT_PUBLIC_GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX
NEXT_PUBLIC_ENABLE_ANALYTICS=false

# File upload configuration: Settings for the file upload functionality
NEXT_PUBLIC_MAX_UPLOAD_SIZE=50
NEXT_PUBLIC_SUPPORTED_FILE_TYPES=csv,json,xml,jpg,png,tiff,mp3,wav
NEXT_PUBLIC_UPLOAD_RETENTION_DAYS=30

# HubSpot CRM integration: HubSpot credentials for CRM integration
NEXT_PUBLIC_HUBSPOT_PORTAL_ID=your_hubspot_portal_id

# Next.js configuration: Next.js specific settings
REVALIDATE_TOKEN=your_revalidate_secret_token

# Development settings: Settings for development environment
NEXT_PUBLIC_DEBUG_MODE=false
NEXT_PUBLIC_MOCK_API_RESPONSES=false
NEXT_PUBLIC_DISABLE_RATE_LIMITING=false
NEXT_PUBLIC_UPLOAD_SIMULATION_MODE=false